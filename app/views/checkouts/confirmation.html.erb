<div class="confirmation">
  <h2>Confirm Order</h2>
  <table border = 2px >
    <tr>
      <td>Item</td>
      <td>Price</td>
      <td>Quantity</td>
      <td>Subtotal</td>
    </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= number_to_currency(item.price.to_f/100.00) %></td>
      <td><%= @cart.quantity(item.id.to_s) %></td>
      <td><%= number_to_currency(@cart.subtotal[item.id].to_f/100.00) %></td>
    </tr>
  <% end %>
    <tfoot>
      <tr>
        <td></td>
        <td></td>
        <td>total</td>
        <td><%= number_to_currency(@cart.total.to_f/100.00) %></td>
      </tr>
    </tfoot>
  </table>
  <%= button_to "Confirm Order", orders_path(order: {user_id: current_user.id, subtotal: @cart.total.to_f/100.00, })%>
</div>
