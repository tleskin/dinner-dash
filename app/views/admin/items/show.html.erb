<div class="admin_item_show">

<h2><%= @item.title %></h2>
<%= image_tag @item.image.url(:small) %>
<ul>
  <li><%= @item.description %></li>
  <li>Menu Categories
    <ul>
      <% @item.categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    </ul>
  </li>
  <li><%= number_to_currency(@item.price.to_f / 100.00) %></li>
  <li>Status of Item: <%= @item.show_status %></li>
  <li><%= link_to "Edit", edit_admin_item_path(@item) %></li>
</ul>
</div>
